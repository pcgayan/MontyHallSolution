services:
  apigateway:
    build:
      context: D:\Projects\Me\ASPNet\MontyHallSolution\MontyHallSolution
      dockerfile: APIGateway/Dockerfile
    container_name: apigateway
    depends_on:
    - montyhallapi
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      ASPNETCORE_URLS: https://+:443;http://+:80
    hostname: apigateway
    image: apigateway
    ports:
    - published: 8001
      target: 80
    - target: 80
    - target: 443
    volumes:
    - C:\Users\gpriyan\AppData\Roaming\ASP.NET\Https:/root/.aspnet/https:ro
    - C:\Users\gpriyan\AppData\Roaming\Microsoft\UserSecrets:/root/.microsoft/usersecrets:ro
  authserver:
    build:
      context: D:\Projects\Me\ASPNet\MontyHallSolution\MontyHallSolution
      dockerfile: AuthServer/Dockerfile
    container_name: authserver
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    hostname: authserver
    image: montyhallapi
    ports:
    - published: 8003
      target: 80
  montyhallapi:
    build:
      context: D:\Projects\Me\ASPNet\MontyHallSolution\MontyHallSolution
      dockerfile: MontyHallAPI/Dockerfile
    container_name: montyhallapi
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    hostname: montyhallapi
    image: montyhallapi
    ports:
    - published: 8002
      target: 80
    - target: 80
version: '3.4'